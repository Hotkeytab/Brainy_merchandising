<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BrainyMerchandising" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.BrainyMerchandising.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AnimationsForDialog">
        <item name="android:windowEnterAnimation">@anim/zoom_in</item>
        <item name="android:windowExitAnimation">@anim/zoom_out</item>
    </style>

    <style name="AnimationsForMapDialogSwipe">
        <item name="android:windowEnterAnimation">@anim/left_to_right_animation_forquestion</item>
        <item name="android:windowExitAnimation">@anim/zoom_out_map</item>
    </style>


    <style name="AnimationsForMapDialog">
        <item name="android:windowEnterAnimation">@anim/zoom_in_map</item>
        <item name="android:windowExitAnimation">@anim/zoom_out_map</item>
    </style>


    <style name="AnimationsForAddMapDialog">
        <item name="android:windowEnterAnimation">@anim/zoom_in_map</item>
        <item name="android:windowExitAnimation">@anim/zoom_out_map</item>
    </style>

    <style name="Theme.BrainyMerchandising.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>