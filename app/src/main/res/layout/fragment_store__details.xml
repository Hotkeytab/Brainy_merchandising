<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Visite.UI.Store_Details">

    <androidx.cardview.widget.CardView
        android:id="@+id/cutom_bar_top_store_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5sdp"
        app:cardCornerRadius="@dimen/_4sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:background="@color/purpleLogin"
            android:orientation="horizontal"
            android:padding="@dimen/_5sdp"
            app:layout_constraintTop_toTopOf="parent">


            <ImageView
                android:id="@+id/backToMainMenu"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_gravity="center"
                android:src="@drawable/ic_arowback"
                android:contentDescription="TODO" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/bf_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/_5sdp"
                android:gravity="center"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/_15sdp"
                android:gravity="center"
                android:text="Magasin Carrefour la Marsa"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="8dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="8dp"
        android:gravity="top"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cutom_bar_top_store_details">


        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="match_parent"
            android:layout_height="305dp"
            android:src="@drawable/supermarketcar" />


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"

            app:cardBackgroundColor="#293044"
            app:cardCornerRadius="@dimen/_15sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="serif"
                    android:text="Enseigne :"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold">


                </TextView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="serif"
                    android:text="Adresse :"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold">


                </TextView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="serif"
                    android:text="Ville :"
                    android:textColor="#FAF9F9"
                    android:textStyle="bold">


                </TextView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="serif"
                    android:text="Gouvernorat :"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold">


                </TextView>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:id="@+id/Menu_display"
        android:layout_marginLeft="65dp"

        android:layout_marginRight="65dp"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:layout_marginTop="20dp"
        android:background="#293044"
        app:cardCornerRadius="@dimen/_15sdp">


        <TextView
            android:id="@+id/displaySuivie"

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#293044"
            android:fontFamily="serif"
            android:gravity="center"
            android:text="Display"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold"
            android:typeface="normal"
            app:cardCornerRadius="@dimen/_15sdp" />

    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/Menu_Stock"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="65dp"

        android:layout_marginRight="65dp"
        android:background="#293044"
        app:cardCornerRadius="@dimen/_15sdp">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#293044"
            android:gravity="center"
            android:fontFamily="serif"

            android:text="Stock"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold"
            android:typeface="normal"
            app:cardCornerRadius="@dimen/_15sdp" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/Menu_Order"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:layout_marginLeft="65dp"

        android:layout_marginRight="65dp"
        android:layout_marginTop="10dp"
        android:background="#293044"
        app:cardCornerRadius="@dimen/_15sdp">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#293044"
            android:gravity="center"
            android:text="order"
            android:fontFamily="serif"

            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold"
            android:typeface="normal"
            app:cardCornerRadius="@dimen/_15sdp" />


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/Menu_LogOut"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="40dp"
        android:background="#293044"
        app:cardCornerRadius="@dimen/_15sdp">
        <TextView
            android:id="@+id/finVisite"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#F44336"
            android:gravity="center"
            android:text="Fin de Visite"
            android:textColor="#FFFFFF"
            android:fontFamily="serif"

            android:textSize="24sp"
            android:textStyle="bold"
            android:typeface="normal"
            app:cardCornerRadius="@dimen/_15sdp" />

    </androidx.cardview.widget.CardView>
</LinearLayout>



    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>